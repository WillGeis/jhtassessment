<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Text box area -->
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/name"
        android:hint="@string/name"
        android:layout_marginTop="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>
    <EditText
        android:id="@+id/edit_equipment"
        android:hint="@string/equipment"
        android:autofillHints="@string/equipment"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>
    <EditText
        android:id="@+id/edit_duration"
        android:autofillHints="@string/duration_min"
        android:hint="@string/duration_min"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>

    <!-- difficulty dropdown -->
    <Spinner
        android:id="@+id/edit_difficulty"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:backgroundTint="#FFFFFF"
        android:popupBackground="#211e1f"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <!-- button area -->
    <Button
        android:id="@+id/save_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="80dp"
        app:cornerRadius="10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/save_button"/>
    <Button
        android:id="@+id/back_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:text="@string/previous"
        app:cornerRadius="10dp"
        android:gravity="center"/>
</LinearLayout>
