<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="Base.Theme.JHTAssessment" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App background -->
        <item name="android:windowBackground">#211e1f</item>
        <!-- Default text color -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <!-- Buttons -->
        <item name="colorPrimary">#de1f1c</item>
        <item name="colorSecondary">#de1f1c</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.JHTAssessment" parent="Base.Theme.JHTAssessment">
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Button style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">#de1f1c</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconTint">#FFFFFF</item>
    </style>

</resources>
